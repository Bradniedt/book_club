<h1 class="user-review-header"><%= @user.name %></h1>

<h4 class="user-review-header">My reviews:</h4>
<section class="user-reviews-box">
    <% @reviews.each do |review| %>
    <article class="review-box">
      <p>Title: <%= review.title %></p>
      <p>Book: <%= link_to "#{review.book.title}", book_path(review.book) %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.description %></p>
      </article>
    <% end %>
</section>
