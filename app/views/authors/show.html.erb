<div class="view">
  <h3 class="author-header"><%= @author.name %></h3><br/>

  <%= link_to "Delete Author", author_path(@author), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
  <section class="flex-box">

  <% @author.books.each do |book| %>
    <article class="author-book">
      <p><%= link_to "#{book.title}", book_path(book) %></p>
      <p>Pages: <%= book.pages %></p>
      <p>Year: <%= book.year %></p>
      <section class="top_review">
        Top Review:
        <% if book.top_reviews.first != nil %>
          <p><%= link_to "#{book.top_reviews.first.user.name}", user_path(book.top_reviews.first.user.name) %> ||
          <%= book.top_reviews.first.title %> ||
          Rating: <%= book.top_reviews.first.rating %></p>
        <% end %>
      </section>
    </article>
  <% end  %>

  </section>
</div>
