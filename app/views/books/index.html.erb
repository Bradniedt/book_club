<a href="/books/new">Create a new book!</a>

<section class="book-flex-box">
  <% @books.each do |book| %>
    <article class="book-box">
      <p>Title: <%= book.title  %></p>
      <p>Pages: <%= book.pages  %></p>
      <p>Year: <%= book.year  %></p>
      <p>Author(s): <%= book.authors.pluck(:name).join(", ")  %></p>
    </article>
  <% end %>
</section>
