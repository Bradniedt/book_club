Title: <%= @book.title %><br/>
Pages: <%= @book.pages %><br/>
Year: <%= @book.year %><br/>
Author(s): <% @authors.each do |author| %>
  <%= author.name %>
<% end %>
<br/>
 <% @book.reviews.each do |review|%>
  <%= link_to "#{review.user.name}", user_path(review.user.id) %>
  <%= review.title %>
  <%= review.description %>
  <%= review.rating %>
  <br/>
 <% end  %>
 <div class="">
   <%= link_to "Add Review", new_book_review_path(@book) %>
 </div>
